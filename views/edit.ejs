<%include partials/header%>

<div class="ui main container segment">
    <div class= "ui huge header"> Edit <%= blog.title%> </div>
        
        <form class = "ui form" action= "/blogs/<%= blog._id %>?_method=PUT" method = "POST">
            <div class ="field">
                <label>Title</label>
                <input type= "text" name = "blog[title]" value = "<%=blog.title%>"></input>
            
            </div>
            <div class ="field">
                <label>Image</label>
                <input type= "text" name = "blog[image]" value = "<%=blog.image%>"></input>
            
                
            </div>
            <div class ="field">
                <label>Blog content</label>
                <textarea name = "blog[body]"> <%=blog.body%></textarea></textarea>
            
                                   
                          <button class="ui basic black button" type ="submit">Submit</button>
                        
                         </div>
            </form>
    </div>
    
</div>

<%include partials/footer%>